<div class="container container-bg d-flex flex-column justify-content-center align-items-center mt-5">
  <h2 class="text-light fs-1 fw-bold">Password Recovery</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mt-5">
      <%= f.label :email, class: "text-light" %><br/>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="actions d-flex justify-content-center mt-3">
      <%= f.submit "Reset Password",
        class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="container container-bg text-center mt-5">
    <%= render "devise/shared/links" %>
  </div>
</div>