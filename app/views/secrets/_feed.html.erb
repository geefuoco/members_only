<% @secret.reverse.each do |secret|%>

  <div class="container d-flex flex-column justify-content-center mt-2 border rounded bg-light">

      <% if user_signed_in? && current_user == secret.user %>
        <div class="container d-flex justify-content-end position-relative end-0 p-0">
          <%= link_to edit_secret_url(secret.id),
            class: "mx-1" do %>
            <span class="icon"><i class="bi bi-pencil" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to secret_url(secret.id), method: :delete,
            class: "mx-1" do%>
            <span class="icon"><i class="bi bi-trash" aria-hidden="true"></i></span>
          <% end %>
        </div>
      <% end %>

    <div class="container border-bottom border-success d-flex justify-content-between title">
      <%= link_to secret_url(secret.id) do%>
        <h3 class="fs-2 fw-bold">
          <%= secret.title %>
        </h3>
      <% end %>

    </div>
    <div class="container">
      <p class="ps-2"><%= secret.body %></p>
    </div>
  </div>
<% end %>