<nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
  <div class="container-fluid">
    <%= link_to "Members Only", "#",
      class: "fs-4 text-light btn navbar-brand"%>

    <button class="navbar-toggler" type="button"
      data-bs-toggle="collapse"
      data-bs-target="#collapsable" 
      aria-controls="collapsable" 
      aria-expanded="false" 
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsable">
      <% if current_user%>
        <%= render "logged_in"%>
      <% else %>
        <%= render "not_logged_in"%>
      <% end %>

    </div>
  </div>
</nav>

<div class="modal" id="modal-window" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content"></div>
  </div>
</div>

<div class="container container-bg mt-2">

  <div class="row">
    <div class="col d-none d-lg-block">
      
    </div>
    <div class="col-6">
      <% @secret.each do |secret|%>
        <div class="container d-flex flex-column justify-content-center mt-2 shadow border round">
          <div class="container border-bottom border-success">
            <h3 class="fs-2 fw-bold"><%= secret.title %></h3>
          </div>
          <div class="container">
            <p class="ps-2"><%= secret.body %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col d-none d-lg-block">

    </div>
  </div>

</div>

