<% if flash[:notice] || flash.now[:notice]%>
  <div class="container-fluid alert alert-primary fw-bold mx-0 text-center zindex-alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert] || flash.now[:alert] %>
  <div class="container-fluid alert alert-danger fw-bold mx-0 text-center zindex-alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<script>
  $(".alert").fadeOut(3750)
</script>